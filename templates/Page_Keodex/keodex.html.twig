{% extends 'base.html.twig' %}

{% block content %}
    <h2 class="title row justify-content-center">KEODEX</h2>
    <div class="accordion row justify-content-start " id="accordionDeals">
        <div class="card">
            {% for category in categories %}
                <div class="card-header card_button" id="headingOne">
                    <button class="btn btn-link category_button mb-3" type="button" data-toggle="collapse"
                            data-target="#collapse{{ category.id }}"
                            aria-expanded="false" aria-controls="collapseOne"><h3>{{ category.name }}<i class="fas fa-chevron-down ml-5"></i><i class="fas fa-chevron-up ml-5"></i></h3>
                    </button>
                </div>
                {% for line in category.lines %}
                    <div id="collapse{{ category.id }}" class="collapse" aria-labelledby="headingOne"
                         data-parent="#accordionDeals">
                        <div class="card-body tool_card ml-3">
                            <i class="fas fa-1x fa-angle-double-right mr-3"></i>{{ line.numberName }}
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
{% endblock %}

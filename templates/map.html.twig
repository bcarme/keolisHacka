{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"
          integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
          crossorigin=""/>
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.4.1/dist/MarkerCluster.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.4.1/dist/MarkerCluster.Default.css">

    {{ encore_entry_link_tags('app') }}
{% endblock %}

 {% block content %}
     <div class="container-fluid">
         <div class="col-sm-12 d-flex flex-row-reverse pt-2">
             <div class="d-flex justify-content-center align-items-center flex-row-reverse mb-2">
                 <img style="width:40px;" src="{{ asset('build/images/ginkgo.png') }}" alt="Symbole collection">
                 <p class="align-self-center m-0 p-1 compteur"> {{ counts |length}} / 80</p>
             </div>
         </div>
     </div>
<div class="container">

     <h1 class="keocachesTitle mt-2">Kéocaches</h1>
     <div id="maCarte"></div>
</div>
 {% endblock %}
{% block javascripts %}
            <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"
                    integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew=="
                    crossorigin=""></script>
    <script src="https://unpkg.com/leaflet.markercluster@1.4.1/dist/leaflet.markercluster.js"></script>
            <script>

                var markersArray = [];

                var carte = L.map('maCarte').setView([47.903912, 1.904599], 13);
                L.tileLayer('https://{s}.tile.openstreetmap.fr/hot/{z}/{x}/{y}.png', {

                    attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Tiles style by <a href="https://www.hotosm.org/" target="_blank">Humanitarian OpenStreetMap Team</a> hosted by <a href="https://openstreetmap.fr/" target="_blank">OpenStreetMap France</a>',
                    minZoom: 1,
                    maxZoom: 20
                }).addTo(carte);


                var markers = L.markerClusterGroup();

                var iconeBike = L.icon({
                    iconUrl: "build/images/marker-green-bike.png",
                    iconSize: [50, 62],
                    iconAnchor: [25, 50],
                    popupAnchor: [0, -50],
                });

                var iconeBikeGold = L.icon({
                    iconUrl: "build/images/marker-gold-bike.png",
                    iconSize: [50, 62],
                    iconAnchor: [25, 50],
                    popupAnchor: [0, -50],
                });

                var iconePark = L.icon({
                    iconUrl: "build/images/marker-green-park.png",
                    iconSize: [50, 62],
                    iconAnchor: [25, 50],
                    popupAnchor: [0, -50],
                });

                var iconeParkGold = L.icon({
                    iconUrl: "build/images/marker-gold-park.png",
                    iconSize: [50, 62],
                    iconAnchor: [25, 50],
                    popupAnchor: [0, -50],
                });


                var iconeBus = L.icon({
                    iconUrl: "build/images/marker-green-bus.png",
                    iconSize: [50, 62],
                    iconAnchor: [25, 50],
                    popupAnchor: [0, -50],
                });

                var iconeBusGold = L.icon({
                    iconUrl: "build/images/marker-gold-bus.png",
                    iconSize: [50, 62],
                    iconAnchor: [25, 50],
                    popupAnchor: [0, -50],
                });

                {% for infoStation in infoStations %}
                    var marker = L.marker([{{infoStation.pointgeo.0}}, {{infoStation.pointgeo.1}}], {icon:iconeBike});
                    marker.bindPopup("<h4> {{ infoStation.nomstation }}</h4>");        //TODO: fixer la durée du pop-up en mobile
                    markers.addLayer(marker);

                    markersArray.push(marker);
                {% endfor %}

                {% for infoPark in infoParks %}
                    var marker = L.marker([{{infoPark.coords.0}}, {{infoPark.coords.1}}], {icon:iconePark});
                    marker.bindPopup("<h4> {{ infoPark.name }}</h4>");
                    markers.addLayer(marker);

                    markersArray.push(marker);
                {% endfor %}

                {% for infoOneBus in infoBus %}
                    var marker = L.marker([{{infoOneBus.geo_point_2d.0}}, {{infoOneBus.geo_point_2d.1}}], {icon:iconeBus});
                    marker.bindPopup("<h4> {{ infoOneBus.num_ligne }}</h4>");
                    markers.addLayer(marker);

                    markersArray.push(marker);
                {% endfor %}

                var marker = L.marker([47.911582, 1.938054], {icon:iconeParkGold});
                marker.bindPopup("<h4> Trouvé !</h4> <img src=\"/build/images/SkinKeodis/rose.png\" height=\"50px\">");
                markers.addLayer(marker);

                markersArray.push(marker);

                var marker = L.marker([47.911506, 1.914290], {icon:iconeBikeGold});
                marker.bindPopup("<h4> Trouvé !</h4> <img src=\"/build/images/SkinKeodis/spruce.png\" height=\"50px\">");
                markers.addLayer(marker);

                markersArray.push(marker);

                var marker = L.marker([47.905866, 1.931547], {icon:iconeBikeGold});
                marker.bindPopup("<h4> Trouvé !</h4> <img src=\"/build/images/SkinKeodis/flowers.png\" height=\"50px\">");
                markers.addLayer(marker);

                markersArray.push(marker);

                var marker = L.marker([47.8905282729, 1.9006144518], {icon:iconeBusGold});
                marker.bindPopup("<h4> Trouvé !</h4> <img src=\"/build/images/SkinKeodis/oak.png\" height=\"50px\">");
                markers.addLayer(marker);

                markersArray.push(marker);



                var groupe = new L.featureGroup(markersArray);
                carte.fitBounds(groupe.getBounds().pad(0.5));

                carte.addLayer(markers);

            </script>
            {{ encore_entry_script_tags('app') }}
{% endblock %}
